export fn poly_compress_jazz(reg u64 rp, reg u64 ap) 
{
  inline int i;
  reg u16 t;
  reg u8 c;
  stack u16[KYBER_N] a;
  stack u8[128] r;

  for i = 0 to KYBER_N {
    t = (u16)[ap + 2*i];
    a[i] = t;
  }

  a = poly_compress(rp, a);
}

export fn poly_decompress_jazz(reg u64 rp, reg u64 ap) 
{
  inline int i;
  reg u16 t;
  reg u8 c;
  stack u16[KYBER_N] r;
  stack u8[128] a;

  r = poly_decompress(r, ap);

  for i = 0 to KYBER_N {
    t = r[i];
    (u16)[rp + 2*i] = t;
  }
}

