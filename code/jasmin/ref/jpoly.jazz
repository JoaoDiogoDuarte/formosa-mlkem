export fn poly_basemul_jazz(reg u64 rp, reg u64 ap, reg u64 bp) 
{
  inline int i;
  reg u16 t;
  stack u16[KYBER_N] a;
  stack u16[KYBER_N] b;
  stack u16[KYBER_N] r;

  for i = 0 to KYBER_N {
    t = (u16)[ap + 2*i];
    a[i] = t;
    t = (u16)[bp + 2*i];
    b[i] = t;
  }

  r[0] = 0;
  r = poly_basemul(r, a, b);

  for i = 0 to KYBER_N {
    t = r[i];
    (u16)[rp + 2*i] = t;
  }
}

