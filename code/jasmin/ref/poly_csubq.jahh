#ifndef POLY_CSUBQ_HH
#define POLY_CSUBQ_HH

#include "params.jahh"

fn poly_csubq(reg ptr u16[KYBER_N] rp) -> reg ptr u16[KYBER_N]
{
  inline int i;
  reg u16 t;
  reg u16 b;

  for i = 0 to KYBER_N
  {
    t = rp[i];
    t -= KYBER_Q;
    b = t;
    b >>s= 15;
    b &= KYBER_Q;
    t += b;
    rp[i] = t;
  }
  return rp;
}

#endif
