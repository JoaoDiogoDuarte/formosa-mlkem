require "params.jinc"
require "poly_reduce.jinc"

inline
fn __polyvec_reduce(stack u16[KYBER_VECN] r) -> stack u16[KYBER_VECN]
{
  r[0:KYBER_N] = poly_reduce(r[0:KYBER_N]);
  r[KYBER_N:KYBER_N] = poly_reduce(r[KYBER_N:KYBER_N]);
  r[2*KYBER_N:KYBER_N] = poly_reduce(r[2*KYBER_N:KYBER_N]);

  return r;
}
