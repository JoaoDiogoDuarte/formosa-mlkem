#ifndef POLYVEC_ADD_HH
#define POLYVEC_ADD_HH

#include "params.jahh"
#include "polyvec_topolys.jahh"
#include "poly_add2.jahh"

inline
fn polyvec_add2(stack u16[KYBER_VECN] r, stack u16[KYBER_VECN] b) -> stack u16[KYBER_VECN]
{
  r[0:KYBER_N]         = poly_add2(r[0:KYBER_N], b[0:KYBER_N]);
  r[KYBER_N:KYBER_N]   = poly_add2(r[KYBER_N:KYBER_N], b[KYBER_N:KYBER_N]);
  r[2*KYBER_N:KYBER_N] = poly_add2(r[2*KYBER_N:KYBER_N], b[2*KYBER_N:KYBER_N]);

  return r;
}

#endif
