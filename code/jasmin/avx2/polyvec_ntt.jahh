#ifndef POLYVEC_NTT_HH
#define POLYVEC_NTT_HH

#include "params.jahh"
#include "poly_ntt.jahh"

inline
fn polyvec_ntt(stack u16[KYBER_VECN] r) -> stack u16[KYBER_VECN]
{
  r[0:KYBER_N] = poly_ntt(r[0:KYBER_N]);
  r[KYBER_N:KYBER_N] = poly_ntt(r[KYBER_N:KYBER_N]);
  r[2*KYBER_N:KYBER_N] = poly_ntt(r[2*KYBER_N:KYBER_N]);

  return r;
}

#endif
