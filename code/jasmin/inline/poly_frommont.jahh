#ifndef POLY_FROMMONT_HH
#define POLY_FROMMONT_HH

#include "params.jahh"

param int DMONT   = 1353;      /* (1ULL << 32) % KYBER_Q */

fn poly_frommont(stack u16[KYBER_N] rp) -> stack u16[KYBER_N]
{
  inline int i;
  reg u16 r;
  reg u16 dmont;

  dmont = DMONT;
  
  for i = 0 to KYBER_N 
  {
    r = rp[i];
    r = fqmul(r, dmont);
    rp[i] = r;
  }
  return rp; 
}

#endif
