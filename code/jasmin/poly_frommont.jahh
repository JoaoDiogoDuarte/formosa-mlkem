#ifndef POLY_FROMMONT_HH
#define POLY_FROMMONT_HH

#include "params.jahh"

param int DMONT   = 1353;      /* (1ULL << 32) % KYBER_Q */

fn poly_frommont(reg u64 rp)
{
  inline int i;
  reg u16 r;
  reg u16 dmont;

  dmont = DMONT;
  
  for i = 0 to KYBER_N 
  {
    r = (u16)[rp + 2*i];
    r = fqmul(r, dmont);
    (u16)[rp + 2*i] = r;
  }
 
}

#endif
